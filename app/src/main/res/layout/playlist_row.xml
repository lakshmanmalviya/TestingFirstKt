<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/playlistbg"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/playlistImageRow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#D71D1D"
            android:src="@drawable/attendance"
            app:shapeAppearanceOverlay="@style/cornerTopLeft" />


        <TextView
            android:id="@+id/playlistNameRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acmeregular"
            android:padding="@dimen/padding_10dp"
            android:text="Playlist name will come here "
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

</LinearLayout>